@using Cafe_Otomasyonu.Models.siniflar
@model List<Calisan>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<table class="table table-hover">
    <tr>
        <th>Çalışan İD</th>
        <th>Ad Soyad</th>
        <th>Kullanıcı Adı</th>
        <th> Şifre</th>
        <th> Yetki</th>
        <th></th>
    </tr>

    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Calisanid</td>
            <td>@x.AdSoyad</td>
            <td>@x.Kullaniciadi</td>
            <td>@x.Sifre</td>
            <td>@x.Yetki</td>
            <th><a href="/Calisan/CalisanSil/@x.Calisanid" class="btn btn-outline-danger">Sil</a></th>
        </tr>
    }

</table>
<br />
