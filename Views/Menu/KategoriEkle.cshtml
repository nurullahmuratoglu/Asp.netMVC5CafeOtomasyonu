@model Cafe_Otomasyonu.Models.siniflar.Kategori
@{
    ViewBag.Title = "KategoriEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>KategoriEkle</h2>
<form class="form-group" method="post">
    @Html.LabelFor(x => x.KategoriAd)<!-- //labelin ismini veritabanındaki ismiyle aynı yaptı-->

    @Html.TextBoxFor(x => x.KategoriAd, new { @class = "form-control" })<!-- html helper toolbox araçlarını kullanmaya yarar-->

    <br />
    <button class="btn btn-info"> Kaydet</button>

</form>


