@using Cafe_Otomasyonu.Models.siniflar
@using System.Linq;
@model Cafe_Otomasyonu.Models.IEnumerable.Class1
@{
    ViewBag.Title = "UrunEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h3><a href="/Masa/MasaSiparis/@Model.masaid" style="text-decoration:none;">&larr; Siparişlerime Dön</a></h3>
<div class="card shadow mb-lg-5">

    <div class="card-body">
        @foreach (var k in Model.Urun1)
        {

            <div class="card" style="width: 20rem; float: left; margin-left: 5%; height: 10rem; margin-top:3%; margin-bottom:3%">
                <div class="card-body" style="text-align:center;">
                    <h2 class="card-title" style="text-align:center;color:blue;">@k.UrunAd.ToUpper()</h2>
                    <span class="card-text">İçerik:<span style="color:blue"> @k.Marka_Icerik</span></span><br />
                    <span class="card-text">Fiyat: <span style="color:blue">@k.SatisFiyat &#8378;</span></span><br />
                    <a href="/Masa/Siparis/?urunid=@k.Urunid&masaid=@Model.masaid" style="display:flex;" class="btn btn-success btn-icon-split">Ürünü Ekle</a>

                </div>
            </div>

        }
    </div>
</div>
